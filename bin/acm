#!/bin/sh
. $HOME/bin/p9env

DUMPFILE="$1"

# run_fontsrv
run_plumber

ACME_MOUNT=/tmp/$USER.acmefs
mkdir -p $ACME_MOUNT

if [ -f "$DUMPFILE" ] ; then
  DUMPCMD="-l $DUMPFILE"
fi


SHELL=rc
#FIXFONT="/mnt/font/DejaVu Sans Mono/9a/font"
#VARFONT="/tmp/fontsrv/Droid Sans/10a/font"

# sleep 1 && xseticon -name acme $HOME/lib/acme.png &

shell=$SHELL acme -a -f "$FIXFONT" -F "$VARFONT" $DUMPCMD -m $ACME_MOUNT && killall plumber
