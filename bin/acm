#!/bin/sh
# . $HOME/bin/p9env

# run_fontsrv
run_plumber

ACME_MOUNT=/tmp/$USER.acmefs
mkdir -p $ACME_MOUNT

if [ -f $HOME/acme.dump ] ; then
  DUMPCMD="-l $HOME/acme.dump"
fi

SHELL=/bin/bash --rcfile $HOME/.profile
FIXFONT=$PLAN9/font/lucsans/typeunicode.7.font  export FIXFONT
VARFONT=$PLAN9/font/lucsans/unicode.8.font export VARFONT

shell=$SHELL acme -a -f "$FIXFONT" -F "$FIXFONT" $DUMPCMD -m $ACME_MOUNT && killall plumber
